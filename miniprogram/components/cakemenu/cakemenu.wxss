.typeItemCls{
   background: #f2f2f2;
   width:100%;
   height: 100rpx;
   /*flex 布局*/
   display: flex;
   /*实现垂直居中*/
   align-items: center;
   /*实现水平居中*/
   justify-content: center;
   border-color: white;
   text-align: justify;
   margin:0 auto;
   color:gray;
} 
.typeItemTap{
   background: white;
   width: 100%;
   color: red;
   height: 100rpx;
   /*flex 布局*/
   display: flex;
   /*实现垂直居中*/
   align-items: center;
   /*实现水平居中*/
   justify-content: center;
   border-color: white;
   text-align: justify;
   margin:0 auto;
} 